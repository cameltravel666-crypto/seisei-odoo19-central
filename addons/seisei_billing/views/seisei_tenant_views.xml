<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tenant List View -->
    <record id="seisei_tenant_view_list" model="ir.ui.view">
        <field name="name">seisei.tenant.list</field>
        <field name="model">seisei.tenant</field>
        <field name="arch" type="xml">
            <list string="Tenants">
                <field name="tenant_code"/>
                <field name="name"/>
                <field name="business_base_url"/>
                <field name="current_features"/>
                <field name="last_push_date"/>
                <field name="last_push_status" decoration-success="last_push_status == 'success'" decoration-danger="last_push_status == 'failed'" widget="badge"/>
                <field name="active" column_invisible="1"/>
            </list>
        </field>
    </record>

    <!-- Tenant Form View -->
    <record id="seisei_tenant_view_form" model="ir.ui.view">
        <field name="name">seisei.tenant.form</field>
        <field name="model">seisei.tenant</field>
        <field name="arch" type="xml">
            <form string="Tenant">
                <header>
                    <button name="action_push_entitlements" string="Push Entitlements" type="object" class="oe_highlight"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(seisei_push_log_action)d" type="action" class="oe_stat_button" icon="fa-history"
                                context="{'search_default_tenant_id': id}">
                            <field name="push_log_ids" widget="statinfo" string="Push Logs"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" invisible="active"/>
                    <div class="oe_title">
                        <label for="tenant_code"/>
                        <h1>
                            <field name="tenant_code" placeholder="TEN-DEMO01"/>
                        </h1>
                        <label for="name"/>
                        <h2>
                            <field name="name" placeholder="Tenant Name"/>
                        </h2>
                    </div>
                    <group>
                        <group string="Connection Settings">
                            <field name="business_base_url" placeholder="https://business.example.com"/>
                            <field name="api_key" password="True"/>
                        </group>
                        <group string="Status">
                            <field name="partner_id"/>
                            <field name="active"/>
                            <field name="current_features"/>
                        </group>
                    </group>
                    <group string="Last Push Info">
                        <group>
                            <field name="last_push_date"/>
                            <field name="last_push_status"/>
                        </group>
                        <group>
                            <field name="last_push_error" invisible="not last_push_error"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Subscriptions" name="subscriptions">
                            <field name="subscription_ids">
                                <list string="Subscriptions">
                                    <field name="name"/>
                                    <field name="subscription_state"/>
                                    <field name="date_order"/>
                                    <field name="recurring_monthly"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Tenant Search View -->
    <record id="seisei_tenant_view_search" model="ir.ui.view">
        <field name="name">seisei.tenant.search</field>
        <field name="model">seisei.tenant</field>
        <field name="arch" type="xml">
            <search string="Search Tenants">
                <field name="tenant_code"/>
                <field name="name"/>
                <field name="partner_id"/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archived" name="archived" domain="[('active', '=', False)]"/>
                <separator/>
                <filter string="Push Failed" name="push_failed" domain="[('last_push_status', '=', 'failed')]"/>
                <separator/>
                <filter string="Group by Partner" name="group_partner" context="{'group_by': 'partner_id'}"/>
                <filter string="Group by Push Status" name="group_push_status" context="{'group_by': 'last_push_status'}"/>
            </search>
        </field>
    </record>

    <!-- Tenant Action -->
    <record id="seisei_tenant_action" model="ir.actions.act_window">
        <field name="name">Tenants</field>
        <field name="res_model">seisei.tenant</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="seisei_tenant_view_search"/>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first tenant
            </p>
            <p>
                Tenants represent customer instances in the business database.
            </p>
        </field>
    </record>
</odoo>
