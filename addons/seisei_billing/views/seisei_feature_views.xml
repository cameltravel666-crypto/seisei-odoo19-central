<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Feature List View -->
    <record id="seisei_feature_view_list" model="ir.ui.view">
        <field name="name">seisei.feature.list</field>
        <field name="model">seisei.feature</field>
        <field name="arch" type="xml">
            <list string="Features" editable="bottom">
                <field name="key"/>
                <field name="name"/>
                <field name="description"/>
                <field name="active" column_invisible="1"/>
            </list>
        </field>
    </record>

    <!-- Feature Form View -->
    <record id="seisei_feature_view_form" model="ir.ui.view">
        <field name="name">seisei.feature.form</field>
        <field name="model">seisei.feature</field>
        <field name="arch" type="xml">
            <form string="Feature">
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" invisible="active"/>
                    <div class="oe_title">
                        <label for="key"/>
                        <h1>
                            <field name="key" placeholder="pos"/>
                        </h1>
                        <label for="name"/>
                        <h2>
                            <field name="name" placeholder="Point of Sale"/>
                        </h2>
                    </div>
                    <group>
                        <field name="description"/>
                        <field name="active"/>
                    </group>
                    <notebook>
                        <page string="Product Mappings" name="mappings">
                            <field name="product_map_ids">
                                <list string="Product Mappings" editable="bottom">
                                    <field name="product_id"/>
                                    <field name="quantity_dependent"/>
                                    <field name="note"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Feature Search View -->
    <record id="seisei_feature_view_search" model="ir.ui.view">
        <field name="name">seisei.feature.search</field>
        <field name="model">seisei.feature</field>
        <field name="arch" type="xml">
            <search string="Search Features">
                <field name="key"/>
                <field name="name"/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archived" name="archived" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <!-- Feature Action -->
    <record id="seisei_feature_action" model="ir.actions.act_window">
        <field name="name">Features</field>
        <field name="res_model">seisei.feature</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="seisei_feature_view_search"/>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first feature
            </p>
            <p>
                Features represent modules or capabilities that can be granted to tenants.
            </p>
        </field>
    </record>
</odoo>
