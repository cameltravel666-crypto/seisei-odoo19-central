<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- QR Table Tree View -->
    <record id="qr_table_view_tree" model="ir.ui.view">
        <field name="name">qr.table.view.tree</field>
        <field name="model">qr.table</field>
        <field name="arch" type="xml">
            <list string="QR Tables">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="pos_config_id"/>
                <field name="pos_table_id" optional="show"/>
                <field name="state" widget="badge" decoration-success="state == 'available'" decoration-warning="state == 'reserved'" decoration-danger="state == 'occupied'"/>
                <field name="order_count"/>
                <field name="qr_url" widget="url"/>
                <field name="active" invisible="1"/>
            </list>
        </field>
    </record>
    
    <!-- QR Table Form View -->
    <record id="qr_table_view_form" model="ir.ui.view">
        <field name="name">qr.table.view.form</field>
        <field name="model">qr.table</field>
        <field name="arch" type="xml">
            <form string="QR Table">
                <header>
                    <button name="action_open_table" string="Open Table / 开台" type="object" class="oe_highlight" invisible="state != 'available'"/>
                    <button name="action_close_table" string="Close Table / 关台" type="object" invisible="state != 'occupied'"/>
                    <button name="action_regenerate_token" string="Regenerate QR / 重新生成二维码" type="object" confirm="This will invalidate the old QR code. Continue?"/>
                    <button name="action_print_qr_code" string="Print QR / 打印二维码" type="object"/>
                    <field name="state" widget="statusbar" statusbar_visible="available,occupied"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_orders" type="object" class="oe_stat_button" icon="fa-shopping-cart">
                            <field name="order_count" widget="statinfo" string="Orders"/>
                        </button>
                    </div>
                    <group>
                        <group string="Basic Info / 基本信息">
                            <field name="name"/>
                            <field name="sequence"/>
                            <field name="pos_config_id"/>
                            <field name="pos_table_id"/>
                            <field name="active"/>
                        </group>
                        <group string="QR Code / 二维码">
                            <field name="qr_token" readonly="1"/>
                            <field name="qr_url" widget="url" readonly="1"/>
                            <field name="qr_url_v2" widget="url" readonly="1"/>
                            <field name="qr_code_image" widget="image" class="oe_avatar" readonly="1"/>
                        </group>
                    </group>
                    <group string="Current Session / 当前会话" invisible="not current_session_id">
                        <field name="current_session_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- QR Table Kanban View -->
    <record id="qr_table_view_kanban" model="ir.ui.view">
        <field name="name">qr.table.view.kanban</field>
        <field name="model">qr.table</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="state"/>
                <field name="order_count"/>
                <field name="qr_url"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div class="o_kanban_record_subtitle">
                                    <field name="state" widget="badge"/>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <span><i class="fa fa-shopping-cart"/> <field name="order_count"/></span>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <a t-att-href="record.qr_url.value" target="_blank" class="btn btn-sm btn-primary">
                                            <i class="fa fa-qrcode"/> View
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    
    <!-- QR Table Search View -->
    <record id="qr_table_view_search" model="ir.ui.view">
        <field name="name">qr.table.view.search</field>
        <field name="model">qr.table</field>
        <field name="arch" type="xml">
            <search string="Search Tables">
                <field name="name"/>
                <field name="pos_config_id"/>
                <filter name="available" string="Available" domain="[('state', '=', 'available')]"/>
                <filter name="occupied" string="Occupied" domain="[('state', '=', 'occupied')]"/>
                <filter name="archived" string="Archived" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter name="group_pos_config" string="POS Config" context="{'group_by': 'pos_config_id'}"/>
                    <filter name="group_state" string="Status" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- QR Table Action -->
    <record id="qr_table_action" model="ir.actions.act_window">
        <field name="name">QR Tables / 二维码餐桌</field>
        <field name="res_model">qr.table</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="search_view_id" ref="qr_table_view_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first QR table
            </p>
            <p>
                Create a QR code for each table. Customers can scan to order.
            </p>
        </field>
    </record>
    
</odoo>

