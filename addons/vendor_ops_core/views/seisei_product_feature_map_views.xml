<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Product Feature Map List View -->
    <record id="seisei_product_feature_map_view_list" model="ir.ui.view">
        <field name="name">seisei.product.feature.map.list</field>
        <field name="model">seisei.product.feature.map</field>
        <field name="arch" type="xml">
            <list string="Product Feature Mappings" editable="bottom">
                <field name="product_id"/>
                <field name="feature_id"/>
                <field name="quantity_dependent"/>
                <field name="note"/>
            </list>
        </field>
    </record>

    <!-- Product Feature Map Form View -->
    <record id="seisei_product_feature_map_view_form" model="ir.ui.view">
        <field name="name">seisei.product.feature.map.form</field>
        <field name="model">seisei.product.feature.map</field>
        <field name="arch" type="xml">
            <form string="Product Feature Mapping">
                <sheet>
                    <group>
                        <group>
                            <field name="product_id"/>
                            <field name="feature_id"/>
                        </group>
                        <group>
                            <field name="quantity_dependent"/>
                        </group>
                    </group>
                    <group>
                        <field name="note"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Product Feature Map Search View -->
    <record id="seisei_product_feature_map_view_search" model="ir.ui.view">
        <field name="name">seisei.product.feature.map.search</field>
        <field name="model">seisei.product.feature.map</field>
        <field name="arch" type="xml">
            <search string="Search Mappings">
                <field name="product_id"/>
                <field name="feature_id"/>
                <filter string="Group by Product" name="group_product" context="{'group_by': 'product_id'}"/>
                <filter string="Group by Feature" name="group_feature" context="{'group_by': 'feature_id'}"/>
            </search>
        </field>
    </record>

    <!-- Product Feature Map Action -->
    <record id="seisei_product_feature_map_action" model="ir.actions.act_window">
        <field name="name">Product Feature Mappings</field>
        <field name="res_model">seisei.product.feature.map</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="seisei_product_feature_map_view_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first product-feature mapping
            </p>
            <p>
                Map subscription products to features they grant access to.
            </p>
        </field>
    </record>
</odoo>
