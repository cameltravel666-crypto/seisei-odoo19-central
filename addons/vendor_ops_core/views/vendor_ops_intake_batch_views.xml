<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Intake Batch List View - Enhanced with status decorations -->
    <record id="view_vendor_ops_intake_batch_tree" model="ir.ui.view">
        <field name="name">vendor.ops.intake.batch.list</field>
        <field name="model">vendor.ops.intake.batch</field>
        <field name="arch" type="xml">
            <list string="Intake Batches"
                  decoration-success="status == 'pulled'"
                  decoration-warning="status == 'collecting'"
                  decoration-info="status == 'draft'"
                  decoration-danger="last_error">
                <field name="name"/>
                <field name="tenant_id"/>
                <field name="tenant_code" optional="hide"/>
                <field name="store_code"/>
                <field name="effective_month"/>
                <field name="status" widget="badge"/>
                <field name="bridge_batch_id" optional="hide"/>
                <field name="last_pull_at" optional="show"/>
                <field name="last_error" optional="show" string="Error"/>
                <!-- Action buttons -->
                <button name="action_open_client_url"
                        type="object"
                        icon="fa-external-link"
                        title="Open Client URL"
                        invisible="not client_record_url"/>
                <button name="action_open_pack_url"
                        type="object"
                        icon="fa-folder-open"
                        title="Open Pack URL"
                        invisible="not notion_pack_url"/>
                <button name="action_generate_pack"
                        type="object"
                        icon="fa-magic"
                        title="Generate Pack"
                        class="btn-link"
                        invisible="notion_pack_url or not bridge_batch_id"/>
                <button name="action_pull_from_notion"
                        type="object"
                        icon="fa-download"
                        title="Pull from Notion"
                        class="btn-primary"
                        invisible="not bridge_batch_id"/>
                <!-- Hidden fields for button visibility -->
                <field name="client_record_url" column_invisible="1"/>
                <field name="notion_pack_url" column_invisible="1"/>
            </list>
        </field>
    </record>

    <!-- Intake Batch Form View - Enhanced with pull tracking and error display -->
    <record id="view_vendor_ops_intake_batch_form" model="ir.ui.view">
        <field name="name">vendor.ops.intake.batch.form</field>
        <field name="model">vendor.ops.intake.batch</field>
        <field name="arch" type="xml">
            <form string="Intake Batch">
                <header>
                    <button name="action_pull_from_notion"
                            string="Pull from Notion"
                            type="object"
                            class="btn-primary"
                            icon="fa-download"
                            invisible="not bridge_batch_id"/>
                    <button name="action_generate_pack"
                            string="Generate Pack"
                            type="object"
                            class="btn-secondary"
                            icon="fa-magic"
                            invisible="notion_pack_url or not bridge_batch_id"/>
                    <button name="action_open_client_url"
                            string="Open Client URL"
                            type="object"
                            icon="fa-external-link"
                            invisible="not client_record_url"/>
                    <button name="action_open_pack_url"
                            string="Open Pack URL"
                            type="object"
                            icon="fa-folder-open"
                            invisible="not notion_pack_url"/>
                    <field name="status" widget="statusbar"
                           statusbar_visible="draft,collecting,pulled,review,push_ready"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_open_client_url"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-external-link-square"
                                invisible="not client_record_url">
                            <field name="client_record_url" widget="statinfo" string="发给客户的链接"/>
                        </button>
                        <button name="action_open_pack_url"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-folder-open"
                                invisible="not notion_pack_url">
                            <field name="notion_pack_url" widget="statinfo" string="Notion Pack"/>
                        </button>
                    </div>
                    <!-- Error banner at top -->
                    <div class="alert alert-danger" role="alert"
                         invisible="not last_error">
                        <strong>Error:</strong> <field name="last_error" nolabel="1" readonly="1"/>
                    </div>
                    <group>
                        <group string="Basic Info">
                            <field name="name"/>
                            <field name="tenant_id" options="{'no_create': True}"/>
                            <field name="tenant_code" readonly="1"/>
                            <field name="store_code"/>
                            <field name="effective_month" placeholder="YYYY-MM"/>
                        </group>
                        <group string="Bridge Information">
                            <field name="bridge_batch_id" readonly="1"/>
                            <field name="bridge_trace_id" readonly="1" string="Trace ID"/>
                            <field name="notion_batch_page_id" readonly="1"/>
                            <field name="notion_internal_page_id" readonly="1"/>
                            <field name="client_record_url" readonly="1" widget="url" string="发给客户的链接 (Client Record URL)"/>
                            <field name="notion_pack_url" readonly="1" widget="url"/>
                        </group>
                    </group>
                    <group>
                        <group string="Pull Status">
                            <field name="last_pull_at" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Note" name="note">
                            <field name="note" nolabel="1" placeholder="Additional notes..."/>
                        </page>
                        <page string="Pull Summary" name="pull_summary"
                              invisible="not last_pull_summary">
                            <field name="last_pull_summary" nolabel="1" readonly="1"/>
                        </page>
                        <page string="Page URLs" name="page_urls"
                              invisible="not notion_page_urls">
                            <field name="notion_page_urls" nolabel="1" readonly="1"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Intake Batch Search View - Enhanced with error filter -->
    <record id="view_vendor_ops_intake_batch_search" model="ir.ui.view">
        <field name="name">vendor.ops.intake.batch.search</field>
        <field name="model">vendor.ops.intake.batch</field>
        <field name="arch" type="xml">
            <search string="Intake Batches">
                <field name="name"/>
                <field name="tenant_id"/>
                <field name="tenant_code"/>
                <field name="store_code"/>
                <field name="effective_month"/>
                <field name="bridge_batch_id"/>
                <filter string="Draft" name="draft" domain="[('status', '=', 'draft')]"/>
                <filter string="Collecting" name="collecting" domain="[('status', '=', 'collecting')]"/>
                <filter string="Pulled" name="pulled" domain="[('status', '=', 'pulled')]"/>
                <filter string="Review" name="review" domain="[('status', '=', 'review')]"/>
                <filter string="Push Ready" name="push_ready" domain="[('status', '=', 'push_ready')]"/>
                <separator/>
                <filter string="Has Error" name="has_error" domain="[('last_error', '!=', False)]"/>
                <group>
                    <filter string="Tenant" name="group_tenant" context="{'group_by': 'tenant_id'}"/>
                    <filter string="Status" name="group_status" context="{'group_by': 'status'}"/>
                    <filter string="Month" name="group_month" context="{'group_by': 'effective_month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Intake Batch Action -->
    <record id="action_vendor_ops_intake_batch" model="ir.actions.act_window">
        <field name="name">Intake Batches</field>
        <field name="res_model">vendor.ops.intake.batch</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_vendor_ops_intake_batch_search"/>
        <field name="context">{'search_default_collecting': 0}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first intake batch
            </p>
            <p>
                Intake batches track data collection from Notion.
                Use the Start Intake button on a Tenant to create a new batch.
            </p>
        </field>
    </record>
</odoo>

