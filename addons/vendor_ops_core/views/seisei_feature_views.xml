<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Feature List View -->
    <record id="seisei_feature_view_list" model="ir.ui.view">
        <field name="name">seisei.feature.list</field>
        <field name="model">seisei.feature</field>
        <field name="arch" type="xml">
            <list string="Features" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="key"/>
                <field name="description" optional="hide"/>
                <field name="active" column_invisible="1"/>
            </list>
        </field>
    </record>

    <!-- Feature Form View -->
    <record id="seisei_feature_view_form" model="ir.ui.view">
        <field name="name">seisei.feature.form</field>
        <field name="model">seisei.feature</field>
        <field name="arch" type="xml">
            <form string="Feature">
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" invisible="active"/>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="key"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="active"/>
                        </group>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                    <notebook>
                        <page string="Product Mappings" name="mappings">
                            <field name="product_feature_map_ids" nolabel="1">
                                <list string="Product Mappings">
                                    <field name="product_id"/>
                                    <field name="quantity_dependent"/>
                                    <field name="note"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Feature Kanban View -->
    <record id="seisei_feature_view_kanban" model="ir.ui.view">
        <field name="name">seisei.feature.kanban</field>
        <field name="model">seisei.feature</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="key"/>
                <field name="description"/>
                <field name="active"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_content">
                            <strong class="o_kanban_record_title">
                                <span t-out="record.name.value"/>
                            </strong>
                            <div class="o_kanban_record_body">
                                <span class="badge bg-secondary"><t t-out="record.key.value"/></span>
                            </div>
                            <div class="text-muted" t-if="record.description.value">
                                <small t-out="record.description.value"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Feature Search View -->
    <record id="seisei_feature_view_search" model="ir.ui.view">
        <field name="name">seisei.feature.search</field>
        <field name="model">seisei.feature</field>
        <field name="arch" type="xml">
            <search string="Search Features">
                <field name="name"/>
                <field name="key"/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archived" name="archived" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <!-- Feature Action -->
    <record id="seisei_feature_action" model="ir.actions.act_window">
        <field name="name">Features</field>
        <field name="res_model">seisei.feature</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="search_view_id" ref="seisei_feature_view_search"/>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first feature
            </p>
            <p>
                Features represent capabilities or modules that can be granted to tenants through subscriptions.
            </p>
        </field>
    </record>
</odoo>
