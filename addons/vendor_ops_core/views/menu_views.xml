<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Root menu for Vendor Ops -->
    <menuitem id="menu_vendor_ops_root"
              name="Vendor Ops"
              sequence="100"
              web_icon="vendor_ops_core,static/description/icon.png"/>

    <!-- Tenants menu -->
    <menuitem id="menu_vendor_ops_tenants"
              name="Tenants"
              parent="menu_vendor_ops_root"
              action="action_vendor_ops_tenant"
              sequence="10"/>

    <!-- Intake menu -->
    <menuitem id="menu_vendor_ops_intake_root"
              name="Intake"
              parent="menu_vendor_ops_root"
              sequence="20"/>

    <!-- Start Intake wizard menu -->
    <menuitem id="menu_vendor_ops_start_intake"
              name="Start Intake"
              parent="menu_vendor_ops_intake_root"
              action="action_vendor_ops_start_intake_wizard"
              sequence="5"/>

    <!-- Intake Batches menu -->
    <menuitem id="menu_vendor_ops_intake_batches"
              name="Intake Batches"
              parent="menu_vendor_ops_intake_root"
              action="action_vendor_ops_intake_batch"
              sequence="10"/>

    <!-- Entitlement Configuration menu -->
    <menuitem id="menu_vendor_ops_entitlement_root"
              name="Entitlements"
              parent="menu_vendor_ops_root"
              sequence="30"/>

    <!-- Features menu -->
    <menuitem id="menu_seisei_features"
              name="Features"
              parent="menu_vendor_ops_entitlement_root"
              action="seisei_feature_action"
              sequence="10"/>

    <!-- Product Feature Mappings menu -->
    <menuitem id="menu_seisei_product_feature_map"
              name="Product Mappings"
              parent="menu_vendor_ops_entitlement_root"
              action="seisei_product_feature_map_action"
              sequence="20"/>

    <!-- Push Logs menu -->
    <menuitem id="menu_seisei_push_logs"
              name="Push Logs"
              parent="menu_vendor_ops_entitlement_root"
              action="seisei_push_log_action"
              sequence="30"/>

    <!-- OCR Configuration menu -->
    <menuitem id="menu_vendor_ops_ocr_root"
              name="OCR Service"
              parent="menu_vendor_ops_root"
              sequence="40"/>

    <!-- Sync All OCR Usage Server Action -->
    <record id="action_sync_all_ocr_usage" model="ir.actions.server">
        <field name="name">Sync All OCR Usage</field>
        <field name="model_id" ref="model_vendor_ops_tenant"/>
        <field name="state">code</field>
        <field name="code">action = model.action_sync_all_ocr_usage()</field>
    </record>

    <!-- Sync OCR Usage menu -->
    <menuitem id="menu_sync_ocr_usage"
              name="Sync All Usage"
              parent="menu_vendor_ops_ocr_root"
              action="action_sync_all_ocr_usage"
              sequence="10"/>

    <!-- Push OCR Config Server Action -->
    <record id="action_push_ocr_config" model="ir.actions.server">
        <field name="name">Push OCR Config</field>
        <field name="model_id" ref="model_vendor_ops_tenant"/>
        <field name="state">code</field>
        <field name="code">action = model.action_push_ocr_config()</field>
    </record>

    <!-- Push OCR Config menu -->
    <menuitem id="menu_push_ocr_config"
              name="Push Config to Service"
              parent="menu_vendor_ops_ocr_root"
              action="action_push_ocr_config"
              sequence="5"/>
</odoo>
