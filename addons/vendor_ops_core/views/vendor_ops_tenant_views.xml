<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tenant Form View - Enhanced with Start Intake, Intake Batches list, and Entitlement Management -->
    <record id="view_vendor_ops_tenant_form" model="ir.ui.view">
        <field name="name">vendor.ops.tenant.form</field>
        <field name="model">vendor.ops.tenant</field>
        <field name="arch" type="xml">
            <form string="Vendor Ops Tenant">
                <header>
                    <!-- Push Entitlements button -->
                    <button name="action_push_entitlements"
                            string="Push Entitlements"
                            type="object"
                            class="oe_highlight"
                            icon="fa-cloud-upload"
                            invisible="not code"/>
                    <!-- Start Intake button - only enabled when tenant is saved and has code -->
                    <button name="action_start_intake_from_tenant"
                            string="Start Intake (Notion)"
                            type="object"
                            class="btn-secondary"
                            icon="fa-play"
                            invisible="not code"/>
                    <button name="action_sync_to_bridge"
                            string="Sync to Bridge"
                            type="object"
                            class="btn-secondary"
                            icon="fa-refresh"
                            invisible="not code"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(action_vendor_ops_intake_batch)d"
                                type="action"
                                class="oe_stat_button"
                                icon="fa-list-alt"
                                invisible="not id">
                            <field name="intake_batch_ids" widget="statinfo" string="Batches"/>
                        </button>
                        <button name="%(seisei_push_log_action)d"
                                type="action"
                                class="oe_stat_button"
                                icon="fa-history"
                                context="{'search_default_tenant_id': id}"
                                invisible="not id">
                            <field name="entitlement_push_log_ids" widget="statinfo" string="Push Logs"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" invisible="active"/>
                    <group>
                        <group string="Basic Info">
                            <field name="name" placeholder="Tenant Name"/>
                            <field name="code" readonly="1" placeholder="Auto-generated"/>
                            <field name="partner_id"/>
                            <field name="active"/>
                            <field name="plan"/>
                        </group>
                        <group string="Auto-Generated Fields (Read-only)">
                            <field name="subdomain" readonly="1"/>
                            <field name="domain_primary" readonly="1"/>
                            <field name="customer_db_name" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <group string="Bridge Sync Status">
                            <field name="bridge_sync_status" widget="badge"
                                   decoration-success="bridge_sync_status == 'ok'"
                                   decoration-danger="bridge_sync_status == 'failed'"
                                   decoration-warning="bridge_sync_status == 'pending'"/>
                            <field name="bridge_synced_at" readonly="1"/>
                            <field name="bridge_sync_error" readonly="1"
                                   invisible="bridge_sync_status != 'failed'"/>
                        </group>
                        <group string="Entitlement Status">
                            <field name="current_features" readonly="1"/>
                            <field name="entitlement_push_status" widget="badge"
                                   decoration-success="entitlement_push_status == 'success'"
                                   decoration-danger="entitlement_push_status == 'failed'"/>
                            <field name="entitlement_push_date" readonly="1"/>
                            <field name="entitlement_push_error" readonly="1"
                                   invisible="entitlement_push_status != 'failed'"/>
                        </group>
                    </group>
                    <group>
                        <group string="OCR Usage (Current Month)">
                            <field name="ocr_image_count"/>
                            <field name="ocr_free_remaining"
                                   decoration-danger="ocr_free_remaining == 0"
                                   decoration-warning="ocr_free_remaining &lt; 10"/>
                            <field name="ocr_billable_count"/>
                            <field name="ocr_total_cost"/>
                            <field name="ocr_last_sync" readonly="1"/>
                            <button name="action_sync_ocr_usage"
                                    string="Sync OCR Usage"
                                    type="object"
                                    class="btn-link"
                                    icon="fa-refresh"
                                    invisible="not code"/>
                        </group>
                    </group>

                    <notebook>
                        <!-- Subscriptions Tab -->
                        <page string="Subscriptions" name="subscriptions">
                            <group string="Business Database Connection">
                                <group>
                                    <field name="business_base_url" placeholder="https://00000001.erp.seisei.tokyo"/>
                                </group>
                                <group>
                                    <field name="business_api_key" password="True"/>
                                </group>
                            </group>
                            <field name="subscription_ids" nolabel="1"
                                   context="{'default_vendor_ops_tenant_id': id}">
                                <list string="Subscriptions">
                                    <field name="name"/>
                                    <field name="subscription_state" widget="badge"
                                           decoration-success="subscription_state == '3_progress'"
                                           decoration-warning="subscription_state in ('1_draft', '2_renewal', '4_paused')"
                                           decoration-muted="subscription_state in ('5_renewed', '6_churn')"/>
                                    <field name="date_order"/>
                                    <field name="recurring_monthly" optional="show"/>
                                </list>
                            </field>
                        </page>
                        <!-- Intake Batches Tab - Primary interaction point -->
                        <page string="Intake Batches" name="intake_batches">
                            <field name="intake_batch_ids" nolabel="1"
                                   context="{'default_tenant_id': id}">
                                <list string="Intake Batches"
                                      decoration-success="status == 'pulled'"
                                      decoration-warning="status == 'collecting'"
                                      decoration-info="status == 'draft'"
                                      decoration-danger="last_error">
                                    <field name="name"/>
                                    <field name="store_code"/>
                                    <field name="effective_month"/>
                                    <field name="status" widget="badge"/>
                                    <field name="bridge_batch_id" optional="hide"/>
                                    <field name="last_pull_at" optional="show"/>
                                    <field name="last_error" optional="show" string="Error"/>
                                    <!-- Action buttons -->
                                    <button name="action_open_client_url"
                                            type="object"
                                            icon="fa-external-link"
                                            title="Open Client URL"
                                            invisible="not client_record_url"/>
                                    <button name="action_open_pack_url"
                                            type="object"
                                            icon="fa-folder-open"
                                            title="Open Pack URL"
                                            invisible="not notion_pack_url"/>
                                    <button name="action_generate_pack"
                                            type="object"
                                            icon="fa-magic"
                                            title="Generate Pack"
                                            class="btn-link"
                                            invisible="notion_pack_url or not bridge_batch_id"/>
                                    <button name="action_pull_from_notion"
                                            type="object"
                                            icon="fa-download"
                                            title="Pull from Notion"
                                            class="btn-primary"
                                            invisible="not bridge_batch_id"/>
                                    <!-- Hidden fields for button visibility -->
                                    <field name="client_record_url" column_invisible="1"/>
                                    <field name="notion_pack_url" column_invisible="1"/>
                                </list>
                            </field>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="notes" nolabel="1" placeholder="Additional notes about this tenant..."/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Tenant List View -->
    <record id="view_vendor_ops_tenant_tree" model="ir.ui.view">
        <field name="name">vendor.ops.tenant.list</field>
        <field name="model">vendor.ops.tenant</field>
        <field name="arch" type="xml">
            <list string="Tenants"
                  decoration-muted="not active">
                <field name="name"/>
                <field name="code"/>
                <field name="subdomain" optional="hide"/>
                <field name="domain_primary" optional="show"/>
                <field name="current_features" optional="show"/>
                <field name="active" optional="hide"/>
                <field name="plan"/>
                <field name="ocr_image_count" string="OCR Used" optional="show"/>
                <field name="ocr_free_remaining" string="OCR Free"
                       decoration-danger="ocr_free_remaining == 0"
                       decoration-warning="ocr_free_remaining &lt; 10"
                       optional="show"/>
                <field name="ocr_total_cost" string="OCR Cost" optional="hide"/>
                <field name="bridge_sync_status" widget="badge"
                       decoration-success="bridge_sync_status == 'ok'"
                       decoration-danger="bridge_sync_status == 'failed'"
                       decoration-warning="bridge_sync_status == 'pending'"/>
                <field name="entitlement_push_status" widget="badge"
                       decoration-success="entitlement_push_status == 'success'"
                       decoration-danger="entitlement_push_status == 'failed'"
                       optional="show"/>
                <field name="entitlement_push_date" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- Tenant Search View -->
    <record id="view_vendor_ops_tenant_search" model="ir.ui.view">
        <field name="name">vendor.ops.tenant.search</field>
        <field name="model">vendor.ops.tenant</field>
        <field name="arch" type="xml">
            <search string="Search Tenants">
                <field name="name"/>
                <field name="code"/>
                <field name="domain_primary"/>
                <filter name="active" string="Active" domain="[('active', '=', True)]"/>
                <filter name="sync_ok" string="Synced" domain="[('bridge_sync_status', '=', 'ok')]"/>
                <filter name="sync_failed" string="Sync Failed" domain="[('bridge_sync_status', '=', 'failed')]"/>
                <separator/>
                <filter name="push_success" string="Push Success" domain="[('entitlement_push_status', '=', 'success')]"/>
                <filter name="push_failed" string="Push Failed" domain="[('entitlement_push_status', '=', 'failed')]"/>
                <group>
                    <filter string="Plan" name="group_plan" context="{'group_by': 'plan'}"/>
                    <filter string="Sync Status" name="group_sync_status" context="{'group_by': 'bridge_sync_status'}"/>
                    <filter string="Push Status" name="group_push_status" context="{'group_by': 'entitlement_push_status'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Tenant Action -->
    <record id="action_vendor_ops_tenant" model="ir.actions.act_window">
        <field name="name">Tenants</field>
        <field name="res_model">vendor.ops.tenant</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_vendor_ops_tenant_search"/>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first tenant
            </p>
            <p>
                Tenants represent customer organizations. Each tenant gets an auto-generated
                code, subdomain, and database name.
            </p>
        </field>
    </record>
</odoo>
