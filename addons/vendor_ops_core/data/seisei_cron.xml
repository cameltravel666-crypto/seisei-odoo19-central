<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Cron job for entitlement reconciliation -->
        <record id="ir_cron_entitlement_reconciliation" model="ir.cron">
            <field name="name">Seisei: Reconcile Entitlements</field>
            <field name="model_id" ref="model_vendor_ops_tenant"/>
            <field name="state">code</field>
            <field name="code">model.cron_reconcile_entitlements()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active">True</field>
        </record>

        <!-- Cron job for OCR usage sync -->
        <record id="ir_cron_ocr_usage_sync" model="ir.cron">
            <field name="name">Seisei: Sync OCR Usage</field>
            <field name="model_id" ref="model_vendor_ops_tenant"/>
            <field name="state">code</field>
            <field name="code">model.cron_sync_all_ocr_usage()</field>
            <field name="interval_number">6</field>
            <field name="interval_type">hours</field>
            <field name="active">True</field>
        </record>
    </data>
</odoo>
